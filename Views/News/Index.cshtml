@model IEnumerable<MarioAuth.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/news1.css" />
}

<div class="newsPage">
    <div class="intro">
        <div class="divPhoto">
            <img class="mainPhoto" src="~/img/news/newsPhoto.png">
        </div>
    </div>
    <!--<div class="circle-first"></div>-->

    <div id="pageSection">
        <div class="newsBlock">
            <h1 class="title">Новости</h1>
            @foreach (var item in Model)
            {
                <div class="newsItem">
                    <img class="newsIMG" src="data:image/png; base64,@Convert.ToBase64String(item.Image)">
                    <div class="newsTXT">
                        <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
                        <p>
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>