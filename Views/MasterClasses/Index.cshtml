@model IEnumerable<MarioAuth.Models.MasterClass>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/master.css" />
}
<div class="masterPage" id="mainDiv">
    <div class="intro">
        <div class="divPhoto">
            <img class="mainPhoto" src="~/img/master/masterMainPhoto.png">
        </div>
        <div class="circle">
            <h1 class="appointment">
                Запись на курс<br>
                +79781010010
            </h1>
        </div>
    </div>
    <div id="pageSection">
        <h1 class="title">Мастер-Классы</h1>
        <div class="masterGrid">
            @foreach (var item in Model)
            {
                    <div class="masterData">
                        <h1> @Html.DisplayFor(modelItem => item.Date)</h1>
                    </div>
                    <div class="masterInfo">
                        <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
                        <p><pre>@Html.DisplayFor(modelItem => item.Description)</pre></p>
                    </div>
            }
        </div>
    </div>
</div>