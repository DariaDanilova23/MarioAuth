@model IEnumerable<MarioAuth.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/product.css" />
    <script src="~/js/description.js"></script>

}
<h1 class="tittle">@ViewData["catalogName"]</h1>
<div class="productShop">
    @foreach (var item in Model)
    {
        <div class="productItem">

            <div class="containerPhoto" onmouseover="imgMouseOver(this)" onmouseout="imgMouseOut(this)">
                <img class="productPhoto" src="data:image/png; base64,@Convert.ToBase64String(item.Image)" />
                <p class="description"> @Html.DisplayFor(modelItem => item.Description)</p>
            </div>

            <div class="productInfo">
                <p> @Html.DisplayFor(modelItem => item.Name)</p>
                <p>Цена: @Html.DisplayFor(modelItem => item.Price) ₽</p>



                @if (ShoppingCartsController.IsProductInCart(item.Id))
                {
                    <button disabled>В корзине</button>
                }
                else
                {

                    <form class="product-form" data-product-id="@item.Id">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <button class="addToCart" type="submit">Добавить в корзину</button>
                    </form>
                }
            </div>

            <!--     <form id="myForm">
                     <input type="hidden" id="idGet" name="productId" value=@item.Id />
                     <button type="button" id="addButtonId">Добавить в корзину</button>
                      <input type="submit" id="addButtonId" value="Добавить в корзину" />
                 </form>-->


        </div>
    }
</div>
